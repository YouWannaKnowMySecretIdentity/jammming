{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [ 
        "plugin:react/recommended" 
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4, 
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "space-before-blocks": "error"
    }
}